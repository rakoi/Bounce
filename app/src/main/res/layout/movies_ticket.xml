
<LinearLayout

    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <com.ramotion.foldingcell.FoldingCell
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/folding_cell"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        ​
        <LinearLayout
            android:id="@+id/cell_content_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:visibility="gone">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:text="Summary goes here"
                android:id="@+id/Summary"
                android:gravity="center"

                android:paddingLeft="20dp"
                android:fontFamily="casual"
                />
        </LinearLayout>
        ​
        <FrameLayout
            android:id="@+id/cell_title_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:clipChildren="false"
                android:clipToPadding="false"
                >

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="116dp"
                    android:layout_height="116dp"
                    android:src="@drawable/maze"
                    android:id="@+id/newImage"
                    android:paddingTop="10dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The blacklist"
                    android:textStyle="bold|italic"
                    android:textColor="@color/bluegray"
                    android:textSize="18dp"
                    android:id="@+id/newMovieName"
                    android:layout_margin="10dp"
                    android:layout_toRightOf="@+id/newImage"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/bluegray"
                    android:layout_height="wrap_content"
                    android:text="Genre "
                    android:layout_marginLeft="10dp"
                    android:id="@+id/genreLabel"
                    android:textStyle="bold|italic"
                    android:layout_below="@+id/newMovieName"
                    android:layout_toRightOf="@+id/newImage"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Drama"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/genre"
                    android:layout_below="@+id/newMovieName"
                    android:layout_toRightOf="@+id/genreLabel"
                    android:textColor="@color/bluegray"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluegray"
                    android:text="Seasons "
                    android:layout_marginLeft="10dp"
                    android:id="@+id/EpisodeLabel"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold|italic"
                    android:layout_below="@+id/genre"
                    android:layout_toRightOf="@+id/newImage"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Episodes"
                    android:layout_marginLeft="20dp"
                    android:textColor="@color/bluegray"
                    android:id="@+id/seasonLabel"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold|italic"
                    android:layout_below="@+id/genre"
                    android:layout_toRightOf="@+id/EpisodeLabel"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="@color/bluegray"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:id="@+id/Season"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/EpisodeLabel"
                    android:layout_toRightOf="@+id/newImage"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:id="@+id/Episode"
                    android:layout_marginBottom="6dp"
                    android:layout_marginLeft="20dp"
                    android:layout_below="@+id/seasonLabel"
                    android:layout_toRightOf="@+id/EpisodeLabel"
                    />



            </RelativeLayout>
        </FrameLayout>
        ​
    </com.ramotion.foldingcell.FoldingCell>
</LinearLayout>