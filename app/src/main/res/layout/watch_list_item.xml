<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listitembackground"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/wishListImg"
        android:layout_width="68dp"
        android:layout_height="68dp"       android:layout_margin="5dp"
        android:src="@drawable/maze" />

    <TextView
        android:id="@+id/watchListMovieName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/wishListImg"
        android:text="The blacklist"
        android:textColor="@color/bluegray"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:textSize="15dp"
        android:textStyle="bold|italic" />
    </RelativeLayout>

</LinearLayout>